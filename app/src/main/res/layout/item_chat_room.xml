<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Chat room name"
        style="@style/TextView.Black.Bold"/>

    <TextView android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:text="Seems gcm will take some time"
        style="@style/TextView.Gray.Small"/>

    <TextView android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 AM"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        style="@style/TextView.Gray.ExtraExtraSmall"
        tools:ignore="RtlHardcoded" />

    <TextView android:id="@+id/tvCount"
        android:layout_width="@dimen/margin_padding_extra_large"
        android:layout_height="@dimen/margin_padding_extra_large"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_below="@id/tvTimestamp"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:layout_alignParentRight="true"
        android:text="5"
        android:background="@drawable/bg_circle"
        style="@style/TextView.Gray.ExtraExtraSmall"
        tools:ignore="RtlHardcoded"
        android:visibility="invisible"/>
</RelativeLayout>